public class Main
{
	public static void main(String[] args) {
	 int[] arr = {4, 5, 6, 7, 0, 1, 2, 3};
        int ans = helper(arr);
        System.out.println("The array is rotated " + ans + " times.");
    }
    public static int helper(int[] arr ){
        int ans = Integer.MAX_VALUE;
        int ind = -1;
        for(int i = 0 ; i < arr.length-1; i++){
            if(arr[i] < ans){
                ans = arr[i];
                ind = i;
            }
        }
        return ind;
    }
}
